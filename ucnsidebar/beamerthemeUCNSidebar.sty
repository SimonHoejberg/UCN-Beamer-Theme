\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{beamerthemeUCNSidebar}[2014/09/13 The AAU Sidebar Beamer Theme]
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Load required packages
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\RequirePackage{tikz}
\usetikzlibrary{external}
\RequirePackage{calc}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Theme options and definitions
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%%theme options
\DeclareOptionBeamer{width}{\PassOptionsToPackage{width=#1}{beamerouterthemeUCNSidebar}}
\DeclareOptionBeamer{hideothersubsections}{\PassOptionsToPackage{hideothersubsections}{beamerouterthemeUCNSidebar}}
\DeclareOptionBeamer{hideallsubsections}{\PassOptionsToPackage{hideallsubsections}{beamerouterthemeUCNSidebar}}
\DeclareOptionBeamer{hidetitle}{\PassOptionsToPackage{hidetitle}{beamerouterthemeUCNSidebar}}
\DeclareOptionBeamer{hideauthor}{\PassOptionsToPackage{hideauthor}{beamerouterthemeUCNSidebar}}
\DeclareOptionBeamer{hideinstitute}{\PassOptionsToPackage{hideinstitute}{beamerouterthemeUCNSidebar}}
\DeclareOptionBeamer{shownavsym}{\PassOptionsToPackage{shownavsym}{beamerouterthemeUCNSidebar}}
\DeclareOptionBeamer{lightheaderbg}{\PassOptionsToPackage{lightheaderbg}{beamercolorthemeUCNSidebar}}
\DeclareOptionBeamer{left}{%
  \PassOptionsToPackage{left}{beamerouterthemeUCNSidebar}%
  \PassOptionsToPackage{left}{beamerinnerthemeUCNSidebar}%
  }
\DeclareOptionBeamer{right}{%
  \PassOptionsToPackage{right}{beamerouterthemeUCNSidebar}%
  \PassOptionsToPackage{right}{beamerinnerthemeUCNSidebar}%
  }
\ProcessOptionsBeamer

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%beamer specific options
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\mode<presentation>%refers to the first four modes (beamer,handout,second and trans). That is, to all modes except the article mode
{
  \useinnertheme{UCNSidebar}
  \useoutertheme{UCNSidebar}
  \usecolortheme{UCNSidebar}
}%end of beamer specific options

\mode<all>
